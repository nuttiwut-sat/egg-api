// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  EMPLOYEE
}

model User {
  ID       String @id @default(cuid())
  name     String
  username String
  password String
  role     Role

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Farm {
  ID   String @id @default(cuid())
  name String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Dealer {
  ID     String @id @default(cuid())
  name   String
  email  String
  lineID String
  tel    String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Order     Order[]
}

enum ProductType {
  EGG
  EGG_OTHER
  PANEL
}

model Product {
  ID          String      @id @default(cuid())
  name        String
  img         String
  stockAmount Int         @default(0)
  cost        Float       @default(0)
  price       Float       @default(0)
  type        ProductType

  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt
  ProductGroup ProductGroup[]
  Order        Order[]
}

model ProductGroup {
  ID          String  @id @default(cuid())
  product     Product @relation(fields: [productID], references: [ID])
  stockAmount Int     @default(0)
  groupNum    Int

  productID String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  ID       String  @id @default(cuid())
  product  Product @relation(fields: [productID], references: [ID])
  dealer   Dealer  @relation(fields: [dealerID], references: [ID])
  amount   Int
  price    Float
  slip     String
  hasPanel Boolean

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  productID String
  dealerID  String
}
